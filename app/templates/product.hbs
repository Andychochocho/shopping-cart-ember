<h2>Individual product page</h2>

<div class = "singleProduct">
<h1>{{model.title}}</h1>
<img src = "{{model.image}}">
<p>{{model.description}}</p>
<p class = "cost">{{model.cost}}</p>
</div>

{{new-feedback product=model saveFeedback="saveFeedback"}}
{{#each model.feedbacks as |feedback|}}
<div class = "comment">
<p>Comment:  {{feedback.message}}</p>
<p>Author:  {{feedback.name}}</p>
<hr />
</div>

<!-- <button {{action 'deleteAnswer' answer}}>Delete</button> -->
{{/each}}
